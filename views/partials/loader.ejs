<style>
    body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: #fff;
        overflow: hidden; 
    }

    .loading-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000;
        position: relative;
        transition: all .4s ease;
    }

    .icon {
        width: 20vh;
        height: 20vh;
        position: relative;
        color: #ffffff;
    }

    .icon::before {
        content: '';
        position: absolute;
        z-index: 1;
        left: 0%;
        top: 0%;
        transform: translate(-50%, -50%);
    }

    .icon::after {
        content: '';
        position: absolute;
        left: 0%;
        top: 0%;
        width: 100%;
        height: 100%;
        box-sizing: border-box;
        border-radius: 50%;
        border-left: 1vh dashed;
        border-bottom: 1vh dashed;
        animation: rotate 3s linear infinite;
    }

    .loading-logo {

        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 8vh; 
        height: auto;
    }

    @keyframes rotate {
        0% {
            transform: rotate(0);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>
<div class="loading-container">
    <img class="loading-logo" src="../assets/newlogo.png" alt="Logo">
    <div class="icon"></div>
</div>
<script>

    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() {
            document.querySelector('.loading-container').style.display = 'none';
            document.body.style.overflow = 'auto'; 
        }, 1000); 
    });
</script>