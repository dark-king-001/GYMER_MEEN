            plugins: {
                legend: {
                    display: false,
                },
                title: {
                    display: false,
                    text: 'Chart.js Horizontal Bar Chart'
                }
            },
            scales: {
                x: {
                    display: false,
                    beginAtZero: true,
                    max: maxRatingCount + 3
                },
                y: {
