                    }
                      showAlert("Item removed from cart","success")
                  } else {
                      document.querySelectorAll(`.itemQuantity<%= item.itemId %>`).forEach(item => {item.value = quantity;}) 
                      showAlert("Item quantity decreased","success")
                  }
