<script>
    const additionalImages = document.querySelectorAll('.slider-images');
    const mainProductImage = document.getElementById('mainProductImage');

    additionalImages.forEach((image, index) => {
        // Attach event listeners for both click and hover
        image.addEventListener('click', () => loadImage(image.style.backgroundImage));
        image.addEventListener('mouseover', () => loadImage(image.style.backgroundImage));
    });

    function loadImage(image) {
        // Set the source directly without the slide-out effect
        mainProductImage.src = extractImageUrl(image);
    }

    // Extracts the URL from the background-image property
    function extractImageUrl(backgroundImage) {
        return backgroundImage.replace(/url\(['"]?(.*?)['"]?\)/, '$1');
    }
</script>


