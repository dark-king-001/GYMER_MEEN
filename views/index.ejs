            }

            form.d-flex {
                max-width: 70%;
            }
        }

        .product-grid{
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-column-gap: 1rem;
        }

        .product-card {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background-color: #fff;
            color: #000;
            margin: 10px;
            padding: 0.5rem;
            color: #fff;
            border-radius: 0.5rem;
            transition: transform 0.2s;
            height: auto;
        }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-image {
            width: auto;
            height: 30vh;
            object-fit: cover;
            transition: transform 1s ease-in-out;
            display: block;
            margin-left: auto;
            margin-right: auto;
            border-radius: 10px;
        }

        .category-badge {
            padding: 0.8rem 0.8rem;
            border-radius: 0.3rem;
            font-size: 0.8rem;
            text-transform: uppercase;
            width: max-content;
            margin-top: 0.5rem;
            background-color: #000;
        }

        .product-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-top: 1rem;
            color: #000;
        }

        .product-description {
            font-size: 0.9rem;
            margin-top: 0.5rem;
            color: #222;
        }

        .product-price-discount {
            margin-top: 10px;
        }

        .product-price{
            color: #000;
            font-weight: bolder;
        }

        .add-to-cart-btn {
            display: block;
            width: 100%;
            padding: 0.5rem;
            background-color: #000;
            color: #fff;
            text-align: center;
            text-decoration: none;
            font-size: 1rem;
            font-weight: bolder;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-transform: uppercase;
            transition: background-color 0.3s ease-in-out;
        }

        .add-to-cart-btn:hover{
            background-color: #fff;
            border: 1px solid #000;
        }

        .launch-badge {
            position: absolute;
            top: 0rem;
            left: 0.5rem;
            width: 40px;
            height: auto;
            z-index: 1;
        }

        .products-bar{
            width: 100%;
            padding-right: 1rem;
            padding-left: 1rem;
            color: #000;
            background-color: #000;
        }

        .products-bar buttons{
            font-size: 0.7rem;
        }

        .banner-section {
            position: relative;
        }

        .banner-image {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .banner-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #fff;
        }

        .through img{
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .carousel {
            width: 100%;
            overflow: hidden;
            height: auto 
        }

        .carousel-inner {
            width: 100%;
            height: 100%; 
            transition: transform 1s ease-in-out;
        }

        .carousel-item {
            float: left;
            width: 100%;
            height: 100%; 
            box-sizing: border-box;
        }

        .img-fluid {
            width: 100%;
            height: 100%; 
            object-fit: cover;
        }

        .footer-menu a{
            text-decoration: none;
        }

        @media (max-width: 576px){
            .product-grid{
                padding: 2rem;
                padding-right: 3rem;
                grid-template-columns: 1fr;
                grid-column-gap: 1.5rem;
            }

            .footer{
                margin-left: -1rem;
            }
        }
    </style>

